{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.thayoung1.kraken",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Kraken"
  },
  "description": {
    "en": "Adds support for Kraken"
  },
  "category": [
    "internet"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "ThaYoung1!",
    "email": "davydejong.ddj@gmail.com"
  },
  "brandColor": "#5741d9",
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Pair price changes"
        },
        "titleFormatted": {
          "en": "Pair [[pair]] price changes"
        },
        "args": [
          {
            "type": "autocomplete",
            "name": "pair",
            "title": "Asset Pair",
            "placeholder": {
              "en": "choose asset pair"
            }
          }
        ],
        "id": "crypto-price-changes"
      }
    ],
    "actions": [
      {
        "id": "place-market-order",
        "title": {
          "en": "Place market order"
        },
        "titleFormatted": {
          "en": "Place [[type]] market order for asset pair [[pair]] with volume [[volume]] [[unit]]"
        },
        "hint": {
          "en": "Place market order on Kraken"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=kraken-api"
          },
          {
            "type": "dropdown",
            "name": "type",
            "title": {
              "en": "Buy or Sell"
            },
            "values": [
              {
                "id": "buy",
                "label": {
                  "en": "Buy"
                }
              },
              {
                "id": "sell",
                "label": {
                  "en": "Sell"
                }
              }
            ]
          },
          {
            "type": "autocomplete",
            "name": "pair",
            "title": "Asset Pair",
            "placeholder": {
              "en": "choose asset pair"
            }
          },
          {
            "type": "number",
            "name": "volume",
            "title": {
              "en": "Volume"
            },
            "placeholder": {
              "en": "fill in volume"
            },
            "min": 0,
            "max": 10000,
            "step": 0.0001
          },
          {
            "type": "autocomplete",
            "name": "unit",
            "title": "Unit to trade in",
            "placeholder": {
              "en": "fill in unit to trade"
            }
          }
        ]
      },
      {
        "id": "place-limit-order",
        "title": {
          "en": "Place limit order"
        },
        "titleFormatted": {
          "en": "Place [[type]] limit order for asset pair [[pair]] with volume [[volume]] [[unit]] for limit price [[price]]"
        },
        "hint": {
          "en": "Place limit order on Kraken"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=kraken-api"
          },
          {
            "type": "dropdown",
            "name": "type",
            "title": {
              "en": "Buy or Sell"
            },
            "values": [
              {
                "id": "buy",
                "label": {
                  "en": "Buy"
                }
              },
              {
                "id": "sell",
                "label": {
                  "en": "Sell"
                }
              }
            ]
          },
          {
            "type": "autocomplete",
            "name": "pair",
            "title": "Asset Pair",
            "placeholder": {
              "en": "choose asset pair"
            }
          },
          {
            "type": "number",
            "name": "volume",
            "title": {
              "en": "Volume"
            },
            "placeholder": {
              "en": "fill in volume"
            },
            "min": 0,
            "max": 10000,
            "step": 0.0001
          },
          {
            "type": "autocomplete",
            "name": "unit",
            "title": "Unit to trade in",
            "placeholder": {
              "en": "fill in unit to trade"
            }
          },
          {
            "type": "number",
            "name": "price",
            "title": {
              "en": "Price"
            },
            "placeholder": {
              "en": "fill in asset price"
            },
            "min": 0,
            "max": 10000,
            "step": 0.0001
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "kraken-api"
      },
      "class": "other",
      "capabilities": [],
      "platforms": [
        "local"
      ],
      "connectivity": [],
      "images": {
        "small": "/drivers/kraken-api/assets/images/small.png",
        "large": "/drivers/kraken-api/assets/images/large.png",
        "xlarge": "/drivers/kraken-api/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "logo": "logo.png",
            "title": {
              "en": "Fill in your Kraken API and Private Key"
            },
            "usernameLabel": {
              "en": "API Key"
            },
            "usernamePlaceholder": {
              "en": "YRY/qrwqrqwrq..."
            },
            "passwordLabel": {
              "en": "Private Key"
            },
            "passwordPlaceholder": {
              "en": "JDDSANNmnNx..."
            }
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "kraken-api"
    }
  ]
}