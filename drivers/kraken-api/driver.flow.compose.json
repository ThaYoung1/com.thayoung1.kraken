            { "id": "sell", "label": { "en": "Sell" } }
          ]
        },
        {
          "type": "autocomplete",
          "name": "pair",
          "title": "Asset Pair",
          "placeholder": {
            "en": "choose asset pair"
          }
        },
        {
          "type": "number",
          "name": "volume",
          "title": { "en": "Volume" },
          "placeholder": { "en": "fill in volume" },
          "min": 0,
          "max": 10000,
          "step": 0.0001
        },
        {
          "type": "autocomplete",
          "name": "unit",
          "title": "Unit to trade in",
          "placeholder": {
            "en": "fill in unit to trade"
          }
